<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.workdemo.MainActivity">

    <TextView
        android:id="@+id/tv_jump"
        android:layout_margin="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="点击跳转界面" />

    <TextView
        android:id="@+id/tv_dialog_confirm"
        android:layout_margin="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="确认Dialog" />

    <TextView
        android:id="@+id/tv_dialog_alert_one"
        android:layout_margin="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="选择Dialog  one" />
    <TextView
        android:id="@+id/tv_dialog_alert_two"
        android:layout_margin="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="选择Dialog two" />
    <TextView
        android:id="@+id/tv_dialog_edit"
        android:layout_margin="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="编辑Dialog" />
</LinearLayout>
