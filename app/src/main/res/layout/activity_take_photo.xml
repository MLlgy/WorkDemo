<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.workdemo.surfaceview_camera.TakePhotoActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.mk.workdemo.surfaceview_camera.NewCameraPreview
            android:id="@+id/iv_image_show_pre"
            android:layout_width="320dp"
            android:layout_height="240dp" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_image_show"
            android:layout_width="320dp"
            android:layout_height="240dp" />

        <TextView
            android:id="@+id/tv_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size"/>

    </LinearLayout>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bac_btn"
        android:padding="10dp"
        android:text="开始拍照" />


    <TextView
        android:id="@+id/tv_compress_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bac_btn"
        android:padding="10dp"
        android:text="进行压缩" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_compress_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tv_image_compress_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
